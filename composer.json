{
    "name": "drupal/recommended-project",
    "description": "Project template for Drupal projects with a relocated document root",
    "type": "project",
    "license": "GPL-2.0-or-later",
    "repositories": [
        {
            "type": "composer",
            "url": "https://packages.drupal.org/8"
        }
    ],
    "require": {
        "composer/installers": "^2.3",
        "drupal/components": "^3.1",
        "drupal/core-composer-scaffold": "11.2.8",
        "drupal/core-project-message": "11.2.8",
        "drupal/core-recipe-unpack": "11.2.8",
        "drupal/core-recommended": "11.2.8",
        "drush/drush": "^13.6"
    },
    "require-dev": {
        "drupal/core-dev": "11.2.8"
    },
    "conflict": {
        "drupal/drupal": "*"
    },
    "minimum-stability": "stable",
    "prefer-stable": true,
    "autoload": {
        "psr-4": {
            "DrupalProject\\Composer\\": "scripts/composer/"
        }
    },
    "scripts": {
        "post-install-cmd": [
            "DrupalProject\\Composer\\ScriptsHandler::copySettingsFile",
            "DrupalProject\\Composer\\ScriptsHandler::copyServicesFile",
            "DrupalProject\\Composer\\ScriptsHandler::copyThemesFolder",
            "DrupalProject\\Composer\\ScriptsHandler::copyAssetsFolder"
        ],
        "post-update-cmd": [
            "DrupalProject\\Composer\\ScriptsHandler::copySettingsFile",
            "DrupalProject\\Composer\\ScriptsHandler::copyServicesFile",
            "DrupalProject\\Composer\\ScriptsHandler::copyThemesFolder",
            "DrupalProject\\Composer\\ScriptsHandler::copyAssetsFolder"
        ]
    },
    "config": {
        "allow-plugins": {
            "composer/installers": true,
            "dealerdirect/phpcodesniffer-composer-installer": true,
            "drupal/core-composer-scaffold": true,
            "drupal/core-project-message": true,
            "drupal/core-recipe-unpack": true,
            "php-http/discovery": true,
            "php-tuf/composer-integration": true,
            "phpstan/extension-installer": true,
            "tbachert/spi": true
        },
        "sort-packages": true
    },
    "extra": {
        "drupal-scaffold": {
            "locations": {
                "web-root": "web/"
            }
        },
        "installer-paths": {
            "web/core": [
                "type:drupal-core"
            ],
            "web/libraries/{$name}": [
                "type:drupal-library"
            ],
            "web/modules/contrib/{$name}": [
                "type:drupal-module"
            ],
            "web/profiles/contrib/{$name}": [
                "type:drupal-profile"
            ],
            "web/themes/contrib/{$name}": [
                "type:drupal-theme"
            ],
            "drush/Commands/contrib/{$name}": [
                "type:drupal-drush"
            ],
            "web/modules/custom/{$name}": [
                "type:drupal-custom-module"
            ],
            "web/profiles/custom/{$name}": [
                "type:drupal-custom-profile"
            ],
            "web/themes/custom/{$name}": [
                "type:drupal-custom-theme"
            ],
            "recipes/{$name}": [
                "type:drupal-recipe"
            ]
        }
    }
}
